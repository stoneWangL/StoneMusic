<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stone.stonemusic">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_log"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_log"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".utils.MusicAppUtils">
        <activity android:name=".ui.activity.FirstActivity"
            android:theme="@style/TwoTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.LocalListActivity"
            android:theme="@style/TwoTheme"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>